%h1 header
.header
  = link_to 'Home', root_path
  - if user_signed_in?
    - if current_user.is_admin?
      = link_to 'Jelentkezések', applicants_path
      = link_to 'Beosztás', current_schedule_path
    - else
      = link_to 'Profilom', profile_path
      = link_to 'Beosztásom', schedule_path
    = link_to 'Kijelentkezés', destroy_user_session_path, method: :delete
  - else
    = link_to 'Regisztráció', new_user_registration_path
    = link_to 'Bejelentkezés', new_user_session_path
