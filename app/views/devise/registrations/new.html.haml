.signin.text-center
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    %img.mb-4{:alt => "", :height => "72", :src => "/assets/logo.png", :width => "144"}
    %h1.h3.mb-3.font-weight-normal Regisztrálj!
    = f.label 'Email', class: "sr-only"
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email cím', required: true, pattern: "^\\S+@.+\.\\S+$", class: "form-control form-control-lg", id: "inputEmail"
    = f.label 'Jelszó', class: "sr-only"
    = f.password_field :password, autocomplete: "new-password", placeholder: 'Jelszó', required: true, minlength: '8', class: "form-control form-control-lg"
    = f.label 'Jelszó megerősítés', class: "sr-only"
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Jelszó még egyszer', required: true, minlength: '8', class: "form-control form-control-lg", id: "inputPassword"
    .mt-3
      = f.label 'Regisztráció típusa'
    = f.radio_button :rank, 'instructor', required: true
    = f.label :rank, 'Oktatói', value: 'instructor'
    = f.radio_button :rank, 'student'
    = f.label :rank, 'Hallgatói', vlaue: 'student'
    .mt-3.mb-3
    = f.submit 'Tovább', class: "btn btn-lg btn-primary btn-block"
