.signin.text-center
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    %img.mb-4{:alt => "", :height => "72", :src => "/assets/logo.png", :width => "144"}
    %h1.h3.mb-3.font-weight-normal Jelentkezz be!
    = f.label 'Email', class: "sr-only"
    = f.email_field :email, autofocus: true, placeholder: "Email cím", required: true, autocomplete: "email", class: "form-control", id: "inputEmail"
    = f.label 'Jelszó', class: "sr-only"
    = f.password_field :password, placeholder: "Jelszó", required: true, autocomplete: "password", class: "form-control", id: "inputPassword"
    - if devise_mapping.rememberable?
      .mb-3
        = f.check_box :remember_me
        = f.label 'Bejelentkezve maradok'
    = f.submit 'Bejelentkezés', class: "btn btn-lg btn-primary btn-block"
    %p.mt-5.mb-3 
      = link_to "Elfelejtetted a jelszavad?", new_password_path(resource_name), class: "text-muted"
